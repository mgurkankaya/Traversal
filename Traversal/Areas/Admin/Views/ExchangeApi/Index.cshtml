@model IEnumerable<Traversal.Areas.Admin.Models.ApiBookingExchangeNewModel.Exchange_Rates>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Booking API Kur Bilgileri</h5>
        <div class="table-responsive text-nowrap">
            <!-- Kullanıcıdan Miktar Girişi -->
            <div class="row justify-content-center mb-4">
                <h3 class="text-danger text-center">TL İLE DİĞER PARA BİRİMLERİNDEN NE KADAR ALABİLİRİM?</h3>
                <div class="col-md-6">
                   
                    <form asp-action="Index" method="get" class="d-flex">
                       
                        <input type="number" name="amount" step="0.01" class="form-control" placeholder="Hesaplayacağınız Türk Lirasını(₺) Girin." required>
                        <button type="submit" class="btn btn-primary ms-2">Hesapla</button>
                    </form>
                </div>
            </div>
           
            <div class="container">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var rate in Model)
                    {
                        <div class="col">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <h5 class="card-title text-primary">
                                        <i class="bi bi-currency-exchange"></i> @rate.currency
                                    </h5>
                                    <p class="card-text">
                                        <strong>Döviz Kuru (Alış):</strong> @rate.exchange_rate_buy
                                    </p>
                                    <p class="card-text">
                                        <strong>Alınabilecek Tutar:</strong> @rate.exchange_calculated_value.ToString("N2")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
