@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "UpdateGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">


    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Rehber Güncelle</h5>
                    <small class="text-muted float-end">Tur güncelleme sayfası</small>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <input type="hidden" class="form-control" asp-for="GuideId" />
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Rehber Adı</label>
                            <input type="text" class="form-control" asp-for="Name"  />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Açıklama</label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      placeholder="Rehber hakkında açıklama.."></textarea>
                        </div>
                

                        <div class="mb-3">
                            <label class="form-label">Görsel</label>
                            <input type="text" class="form-control" asp-for="ImageUrl"  />
                        </div>



                        <div class="mb-3">
                            <label class="form-label">Twitter Adresi</label>
                            <input type="text" class="form-control" asp-for="TwitterUrl"  />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Instagram Adresi</label>
                            <input type="text" class="form-control" asp-for="InstagramUrl" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Durumu</label>
                            <input type="text" class="form-control" asp-for="Status" />
                        </div>

                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a href="/Admin/Guide/Index"><i class="fa fa-angle-left"></i>İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>