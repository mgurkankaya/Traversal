@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Rehberler</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Açıklama</th>
                        <th>Görsel</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                            <td>@item.Name </td>
                            <td>@item.Description</td>
                            <td>
                                <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                    <li data-bs-toggle="tooltip"
                                        data-popup="tooltip-custom"
                                        data-bs-placement="top"
                                        class="avatar avatar-xs pull-up"
                                        title="Görsel 1">
                                        <img src="@item.ImageUrl" alt="@item.Name" class="rounded-circle" />
                                    </li>
                                </ul>
                            </td>
                               @{if (item.Status==true)
                                {
                                    <td><a href="/Admin/Guide/ChangeToFalse/@item.GuideId" class="btn-sm btn-outline-danger">Pasif Yap</a></td>
                                }
                                else
                                {
                                    <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideId" class="btn-sm btn-outline-success text-center">Aktif Yap</a></td>
                                }
                                }
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded "></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Guide/DeleteGuide/@item.GuideId"><i class="bx bx-trash me-2"></i> Sil</a>
                                        <a class="dropdown-item" href="/Admin/Guide/UpdateGuide/@item.GuideId"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="/Admin/Guide/AddGuide" class="btn-lg btn-outline-primary text-center mt-3">Yeni Rehber Ekle</a>
    </div>
</div>