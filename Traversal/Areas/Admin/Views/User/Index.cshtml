@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card">
        <h5 class="card-header">Kullanıcılar</h5>
        <div class="table-responsive text-nowrap h-px-300 ">
            <table class="table table-hover scrol">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Mail Adresi</th>
                       
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {

                        sayac += 1;
                      
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@sayac</strong></td>
                            <td>@item.Name</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded "></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/User/DeleteUser/@item.Id"><i class="bx bx-trash me-2"></i> Sil</a>
                                        <a class="dropdown-item" href="/Admin/User/UpdateUser/@item.Id"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                        <a class="dropdown-item" href="/Admin/User/CommentUser/@item.Id"><i class="bx bx-comment-check me-2"></i> Yorumlar</a>
                                        <a class="dropdown-item" href="/Admin/User/ReservationUser/@item.Id"><i class="bx bx-map-pin me-2"></i> Tur Geçmişi</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <a href="/Login/SignUp" target="_blank" class="btn-lg btn-outline-primary text-center mt-3">Yeni Kullanıcı</a>
    </div>
</div>