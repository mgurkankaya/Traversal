@model CreateGuideCommand
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header"><strong>MediatR</strong>Rehber Ekleme</h5>
        <div class="table-responsive text-nowrap">
            <form class="p-4" method="post">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label for="Name" class="form-label">Rehber Adı</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Rehber adı girin..." />
                    </div>
                    <div class="col-md-3">
                        <label for="Description" class="form-label">Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Rehbere ait açıklama bilgisi girin..." />
                    </div>
                    <div class="col-md-3">
                        <label for="Description" class="form-label">Görsel URL</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel url girin..." />
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                    <a href="/Admin/GuideMediatR/Index" class="btn btn-secondary ms-2">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>