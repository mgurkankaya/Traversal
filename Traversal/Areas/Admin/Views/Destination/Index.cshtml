@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card">
        <h5 class="card-header">Tur Rotaları</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Şehir</th>
                        <th>Kapasite</th>
                        <th>Görsel</th>
                        <th>Bak</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                   @foreach (var item in Model)
                    {
                        
            
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.DestinationId</strong></td>
                        <td>@item.City</td>
                        <td>@item.Capacity</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="Görsel 1">
                                        <img src="@item.ImageUrl" alt="Görsel 1" class="rounded-circle" />
                                </li>
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="Görsel 2">
                                        <img src="@item.ImageUrl2" alt="Görsel 2" class="rounded-circle" />
                                </li>
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="Kapak Görseli">
                                    <img src="@item.CoverImage" alt="Kapak" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                            <td><span class="badge bg-label-primary me-1"><a href="/Destination/DestinationDetails/@item.DestinationId" target="_blank">Sitede Gör</a></span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded "></i>
                                </button>
                                <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Destination/DeleteDestination/@item.DestinationId"><i class="bx bx-trash me-2"></i> Sil</a>
                                        <a class="dropdown-item" href="/Admin/Destination/UpdateDestination/@item.DestinationId"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
           
        </div>
        <a href="/Admin/Destination/AddDestination" class="btn-lg btn-outline-primary text-center mt-3">Yeni Tur Rotası</a>
    </div>
</div>