@model List<ContactUs>
@{
    ViewData["Title"] = "Trash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int inboxCount = @ViewBag.inboxCount; 
    int trashCount = @ViewBag.trashCount;  
}

<style>
    .table-responsive {
        overflow: visible !important; 
    }

    .dropdown-menu {
        position: absolute; 
        z-index: 1050; 
    }
</style>


<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Bize Ulaşın Mesajları </h5>
        <div>
            <a href="/Admin/ContactUs/Index" class="btn btn-primary me-2 position-relative">
                <i class="fas fa-inbox"></i> Gelen Kutusu
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    @inboxCount
                </span>
            </a>
            <a href="/Admin/ContactUs/Trash" class="btn btn-danger position-relative">
                <i class="fas fa-trash"></i> Çöp Kutusu
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning">
                    @trashCount
                </span>
            </a>
        </div>
    </div>

    <div class="card">
        <h5 class="card-header"> Gelen Kutusu</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Gönderen</th>
                        <th>Mail</th>
                        <th>Konu</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0 ">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.ContactUsId</strong></td>
                            <td>@item.Name</td>
                            <td>@item.Mail</td>
                            <td>@item.Subject</td>
                            <td>@(((DateTime)item.DateSend).ToString("dd-MMM-yyyy"))</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" data-bs-auto-close="outside">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/ContactUs/DeleteContactUs/@item.ContactUsId"><i class="bx bx-trash me-2"></i> Sil</a>
                                        <a class="dropdown-item" href="/Admin/ContactUs/UpdateContactUs/@item.ContactUsId"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                    </div>
                                </div>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>