
@{
    ViewData["Title"] = "GetCityDestId";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header text-center">
                    <h5>Şehir Adı Girin</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="/Admin/GetCityDestId">
                        <div class="mb-3">
                            <label  class="form-label">Şehir Adı</label>
                            <input type="text" class="form-control" name="p"  placeholder="Örneğin: İstanbul" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Oluştur</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
