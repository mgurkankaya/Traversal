@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card">
        <h5 class="card-header">API Ziyaretçi Listesi</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Şehir</th>
                        <th>Ülke</th>
                        <th>Mail</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {


                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.VisitorId</strong></td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>
                            <td>@item.Mail</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded "></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId"><i class="bx bx-trash me-2"></i> Sil</a>
                                        <a class="dropdown-item" href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
        <a href="/Admin/VisitorApi/AddVisitor" class="btn-lg btn-outline-primary text-center mt-3">Yeni Tur Rotası</a>
    </div>
</div>