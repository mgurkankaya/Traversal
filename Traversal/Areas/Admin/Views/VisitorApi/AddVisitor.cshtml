@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Yeni Ziyaretçi Ekle</h5>
                    <small class="text-muted float-end">API İLE EKLEME</small>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Ad</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Adınız..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Soyad</label>
                            <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Şehir</label>
                            <input type="text" class="form-control" asp-for="City" placeholder="Şehriniz..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ülke</label>
                            <input type="text" class="form-control" asp-for="Country" placeholder="Ülkeniz..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mail</label>
                            <input type="text" class="form-control" asp-for="Mail" placeholder="isim@mail.com" />
                        </div>
                        <button type="submit" class="btn btn-primary">Oluştur</button>
                        <a href="/Admin/VisitorApi/Index" class="btn btn-danger">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>