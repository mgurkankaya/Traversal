@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Kullanıcı Listesi</h5>
        <div class="table-responsive text-nowrap">
          
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı</th>
                            <th>Rol Ata</th>
                           
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                                <td>@item.Name</td>
                                <td><a class="btn btn-warning" href="/Admin/Role/AssignRole/@item.Id">Rol Ata</a></td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
           
           
        </div>
        <a href="/Admin/Role/AddRole" class="btn-lg btn-outline-primary text-center mt-3">Yeni Rol</a>
    </div>
</div>