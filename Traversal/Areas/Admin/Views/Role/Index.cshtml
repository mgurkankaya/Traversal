@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}



<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Rol Listesi</h5>
        <div class="table-responsive text-nowrap">
        @if (Model.Count>0)
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Rol Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded "></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/Admin/Role/DeleteRole/@item.Id"><i class="bx bx-trash me-2"></i> Sil</a>
                                            <a class="dropdown-item" href="/Admin/Role/UpdateRole/@item.Id"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
           else
            {
                <div class="alert alert-danger"> <td>Herhangi bir rol bulunamadı.</td> </div>
            }
           
        </div>
        <a href="/Admin/Role/AddRole" class="btn-lg btn-outline-primary text-center mt-3">Yeni Rol</a>
    </div>
</div>