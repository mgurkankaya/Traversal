@using DTOLayer.DTOs.AnnouncementDTOs
@model List<AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card">
        <h5 class="card-header">Duyurular</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>İçerik</th>
                       
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {


                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.AnnouncementId</strong></td>
                            <td>@item.Title</td>
                            <td>@item.Content.Substring(0,10) ...</td>
                          
                           
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded "></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementId"><i class="bx bx-trash me-2"></i> Sil</a>
                                        <a class="dropdown-item" href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementId"><i class="bx bx-edit-alt me-2"></i> Güncelle</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <a href="/Admin/Announcement/AddAnnouncement" class="btn-lg btn-outline-primary text-center mt-3">Yeni Duyuru</a>
    </div>
</div>