@model AnnouncementUpdateDTO
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Duyuru Güncelle</h5>
                    <small class="text-muted float-end">Duyuru güncelleme sayfası</small>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <input type="hidden" class="form-control" asp-for="AnnouncementId" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" />
                            <span asp-validation-for="Title" class=" text-decoration-underline text-bold text-white bg-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">İçerik</label>
                            <textarea asp-for="Content"
                                      class="form-control"></textarea>
                            <span asp-validation-for="Content" class="text-white bg-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a href="/Admin/Announcement/Index" class="btn btn-danger">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>