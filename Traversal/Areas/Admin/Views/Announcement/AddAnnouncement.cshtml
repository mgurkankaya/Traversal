@model AnnouncementListDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Yeni Duyuru Ekle</h5>
                    <small class="text-muted float-end">Yeni tur ekleme sayfası</small>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Başlık" />
                            <span asp-validation-for="Title" class="text-white bg-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">İçerik</label>
                            <textarea asp-for="Content"
                                      class="form-control"
                                      placeholder="Eklenecek duyuru açıklaması..">
                            </textarea>
                            <span asp-validation-for="Content" class="text-white bg-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Oluştur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>