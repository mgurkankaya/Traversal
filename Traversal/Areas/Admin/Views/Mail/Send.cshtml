@model Traversal.Models.MailRequest
@{
    ViewData["Title"] = "Send";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">


    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">E-Mail</h5>
                    <small class="text-muted float-end">Panel içerisinden herhangi bir mail adresine mail gönderebilirsiniz.</small>
                </div>
                <div class="card-body">



                    <form method="post"> 
                
                        <div class="form-group">
                            <label for="kime">Kime:</label>
                            <input type="text" class="form-control" asp-for="ReceiverMail" placeholder="Alıcının E-postası">
                        </div>
                        <div class="form-group">
                            <label for="konu">Konu:</label>
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Konu girin">
                        </div>
                        <div class="form-group">
                            <label for="mesaj">Mesaj:</label>
                            <textarea class="form-control" id="mesaj" asp-for="Body" rows="8" placeholder="Mesajınızı yazın"></textarea>
                            <div class="mt-2">
                                <button type="button" class="btn btn-secondary" onclick="boldText()"><strong>B</strong></button>
                                <button type="button" class="btn btn-secondary" onclick="italicText()"><em>I</em></button>
                                <button type="button" class="btn btn-secondary" onclick="underlineText()"><u>U</u></button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Gönder</button>
                    </form>
                  
                   
                </div>
            </div>
        </div>
    </div>
</div>  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function boldText() {
        let mesaj = document.getElementById('mesaj');
        mesaj.value = mesaj.value + '**';
        mesaj.focus();
    }
    function italicText() {
        let mesaj = document.getElementById('mesaj');
        mesaj.value = mesaj.value + '*';
        mesaj.focus();
    }
    function underlineText() {
        let mesaj = document.getElementById('mesaj');
        mesaj.value = mesaj.value + '<u>';
        mesaj.focus();
    }
</script>