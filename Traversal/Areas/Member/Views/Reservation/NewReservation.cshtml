@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<div class="content-wrapper">
    <div class="content-wrapper-before"></div>
    <div class="content-header row">
        <div class="content-header-left col-md-4 col-12 mb-2">
            <h3 class="content-header-title">Rezervasyonlarım</h3>
        </div>
    </div>
    <div class="content-body">
        <!-- Basic Tables start -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yeni Rezervasyon Oluştur</h4>
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="card">
                            <div class="card-block">
                                <div class="card-body">
                                    <form method="post">
                                        <div class="form-group">
                                            @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("Kişi Sayısı")
                                            <input type="text" asp-for="PersonCount" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Tarih")
                                            <input type="date" asp-for="ReservationDate" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Açıklama")
                                            <input type="text" asp-for="Description" class="form-control" style="height: 100px;" />
                                        </div>

                                        @*  <div class="form-group">
        @Html.Label("Durum")
        <input type="text" asp-for="Status" class="form-control"  />
    </div> *@
                                        <button class="btn-sm btn-outline-primary" onclick="alert('Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır.Rezervasyon onaylanma süreci için güncel rezervasyonlarım menüsünü takip etmeyi unutmayın');">Rezervasyon Oluştur</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Basic Tables end -->
    </div>
</div>