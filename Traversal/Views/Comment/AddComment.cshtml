@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddComment";
}


<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir yorum bırakın.</h4>
    <p class="mb-4">
        * ile işaretlenen alanların doldurulması zorunludur.
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">
        <input type="hidden" value="@Model.DestinationId" name="DestinationId" value="@ViewBag.i">
        <div class="form-group">
            <textarea name="Content" class="form-control" placeholder="Yorumunuz *" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CUser" class="form-control" placeholder="Adınız *"
                       required="">
            </div>
            
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>

                <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>