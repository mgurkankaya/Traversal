@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddComment";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Bir yorum bırakın.</h4>
        <p class="mb-4">
            * ile işaretlenen alanların doldurulması zorunludur.
        </p>
        <form method="post" asp-action="AddComment" asp-controller="Comment">
            <input type="hidden" name="DestinationId" value="@ViewBag.destId">
            <input type="hidden" name="AppUserId" value="@ViewBag.userId">
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Yorumunuz *" required=""
                          spellcheck="false"></textarea>
            </div>
            <div class="input-grids row">
            </div>

            <div class="submit text-right">
                <button class="btn btn-style btn-primary">Yorum Yap </button>
            </div>
        </form>
    </div>
    
}
else
{
    <div class="leave-comment-form mt-5" id="reply">
        @if (ViewBag.isAuthenticated == true)
        {
            <h4 class="side-title mb-2">Bir yorum bırakın.</h4>
            <p class="mb-4">
                * ile işaretlenen alanların doldurulması zorunludur.
            </p>
            <form method="post" asp-action="AddComment" asp-controller="Comment">
                <input type="hidden" name="DestinationId" value="@ViewBag.destId">
                <input type="hidden" name="AppUserId" value="@ViewBag.userId">
                <div class="form-group">
                    <textarea name="Content" class="form-control" placeholder="Yorumunuz *" required=""
                              spellcheck="false"></textarea>
                </div>
                <div class="input-grids row"></div>
                <div class="submit text-right">
                    <button class="btn btn-style btn-primary">Yorum Yap</button>
                </div>
            </form>
        }
        else
        {
            <h4 class="side-title mb-2">Yorum yapmak için üye olmalısınız.</h4>
            <p class="mb-4">
                Üye olarak veya giriş yaparak yorum yapabilirsiniz.
            </p>
            <div class="submit text-right">
                <a href="/Account/Login" class="btn btn-style btn-primary">Giriş Yap</a>
                <a href="/Account/Register" class="btn btn-style btn-secondary">Üye Ol</a>
            </div>
        }
    </div>

}


