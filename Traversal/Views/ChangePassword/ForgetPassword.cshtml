@model ForgetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Şifre Yenileme</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .password-reset-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 30px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="password-reset-container">
            <h3 class="text-center text-primary">Şifre Yenileme</h3>
            <p class="text-muted text-center">Şifre sıfırlama bağlantısı almak için e-posta adresinizi girin.</p>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Mail" class="form-label">E-Posta Adresiniz</label>
                    <input type="email" class="form-control" asp-for="Mail" placeholder="example@mail.com" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Şifre Yenileme Linki Gönder</button>
            </form>

            <div class="text-center mt-3">
                <a href="/Default/Index" class="text-decoration-none">Giriş Sayfasına Dön</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
