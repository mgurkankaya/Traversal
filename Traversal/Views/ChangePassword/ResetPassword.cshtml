@model ResetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Şifre Sıfırla</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .reset-password-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 30px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="reset-password-container">
            <h3 class="text-center text-primary">Şifre Sıfırla</h3>
            <p class="text-muted text-center">Yeni şifrenizi belirleyin.</p>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Yeni Şifre</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="******" required />
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Şifreyi Doğrula</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="******" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Şifreyi Güncelle</button>
            </form>

            <div class="text-center mt-3">
                <a href="/" class="text-decoration-none">Giriş Sayfasına Dön</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
