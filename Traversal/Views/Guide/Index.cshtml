@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UiLayout.cshtml";
}

</style>
<section class="w3l-team" id="team">
    <div class="team-block py-5">
        <div class="container py-lg-5">
            <div class="title-content text-center mb-lg-3 mb-4">
                <h6 class="sub-title">Ekip Arkadaşlarımız</h6>
                <h3 class="hny-title">Rehberlerimizle Tanışın</h3>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {


                    <div class="col-lg-3 col-6 mt-lg-5 mt-4">
                        <div class="box16">
                            <a href="#url">
                                <img src="@item.ImageUrl" alt="" class="img-fluid rounded" style="width: 100%; height: 350px; object-fit: cover;" />
                            </a>
                            <div class="box-content">
                                <h3 class="title"><a href="#url">@item.Name</a></h3>
                                <span class="post">@item.Description</span>
                                <ul class="social">
                                    <li>
                                        <a href="@item.TwitterUrl" class="facebook">
                                            <span class="fa fa-twitter"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@item.InstagramUrl" class="twitter">
                                            <span class="fa fa-instagram"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>